<div class="d-flex justify-content-between align-items-center py-2 <%= 'border-bottom' unless local_assigns[:no_border] %>">
  <div class="d-flex align-items-center">
    <div class="me-3">
      <%= image_tag item[:product].image.present? ? item[:product].image : "isuzu.jpg", 
            alt: item[:product].name, class: "img-thumbnail", 
            style: "width: #{local_assigns[:image_size] || '60px'}; height: #{local_assigns[:image_size] || '60px'}; object-fit: cover;" %>
    </div>
    <div>
      <h6 class="mb-0"><%= item[:product].name %></h6>
      <% if local_assigns[:show_description] %>
        <p class="text-muted mb-1"><%= truncate(item[:product].descrption, length: 80) %></p>
      <% end %>
      <small class="text-muted">
        Quantity: <%= item[:quantity] %>
        <% if local_assigns[:show_price] %>
          Ã— $<%= sprintf("%.2f", item[:product].price) %>
        <% end %>
      </small>
    </div>
  </div>
  <div class="text-end">
    <strong>$<%= sprintf("%.2f", item[:subtotal]) %></strong>
    <% if local_assigns[:show_product_link] %>
      <br>
      <small class="text-muted">
        <%= link_to "View Product", product_path(item[:product]), class: "text-decoration-none" %>
      </small>
    <% end %>
  </div>
</div>
