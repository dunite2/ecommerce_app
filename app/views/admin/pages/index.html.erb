<div class="d-flex justify-content-between align-items-center mb-4">
  <h1>Manage Pages</h1>
  <%= link_to new_admin_page_path, class: "btn btn-success" do %>
    <i class="fas fa-plus me-2"></i>Add New Page
  <% end %>
</div>

<div class="card">
  <div class="card-body">
    <% if @pages.any? %>
      <div class="table-responsive">
        <table class="table table-striped">
          <thead>
            <tr>
              <th>Title</th>
              <th>Slug</th>
              <th>Content Preview</th>
              <th>Created</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% @pages.each do |page| %>
              <tr>
                <td>
                  <strong><%= page.title %></strong>
                </td>
                <td>
                  <code><%= page.slug %></code>
                </td>
                <td>
                  <small class="text-muted"><%= truncate(strip_tags(page.content), length: 80) %></small>
                </td>
                <td><%= page.created_at.strftime("%m/%d/%Y") %></td>
                <td>
                  <div class="btn-group" role="group">
                    <%= link_to admin_page_path(page), class: "btn btn-sm btn-outline-info", title: "View" do %>
                      <i class="fas fa-eye"></i>
                    <% end %>
                    <%= link_to edit_admin_page_path(page), class: "btn btn-sm btn-outline-primary", title: "Edit" do %>
                      <i class="fas fa-edit"></i>
                    <% end %>
                    <%= link_to admin_page_path(page), method: :delete, 
                        class: "btn btn-sm btn-outline-danger", 
                        title: "Delete",
                        data: { confirm: "Are you sure you want to delete this page?" } do %>
                      <i class="fas fa-trash"></i>
                    <% end %>
                  </div>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    <% else %>
      <div class="text-center py-5">
        <i class="fas fa-file-alt fa-3x text-muted mb-3"></i>
        <h4>No Pages Found</h4>
        <p class="text-muted">Get started by creating your first page.</p>
        <%= link_to "Add New Page", new_admin_page_path, class: "btn btn-success" %>
      </div>
    <% end %>
  </div>
</div>
