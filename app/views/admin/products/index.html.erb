<div class="d-flex justify-content-between align-items-center mb-4">
  <h1>Manage Products</h1>
  <%= link_to new_admin_product_path, class: "btn btn-success" do %>
    <i class="fas fa-plus me-2"></i>Add New Product
  <% end %>
</div>

<div class="card">
  <div class="card-body">
    <% if @products.any? %>
      <div class="table-responsive">
        <table class="table table-striped">
          <thead>
            <tr>
              <th>Name</th>
              <th>Price</th>
              <th>Stock</th>
              <th>Status</th>
              <th>Created</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% @products.each do |product| %>
              <tr>
                <td>
                  <strong><%= product.name %></strong><br>
                  <small class="text-muted"><%= truncate(product.descrption, length: 50) %></small>
                </td>
                <td>$<%= number_with_precision(product.price, precision: 2) %></td>
                <td>
                  <span class="badge <%= product.stock_quantity > 10 ? 'bg-success' : product.stock_quantity > 0 ? 'bg-warning' : 'bg-danger' %>">
                    <%= product.stock_quantity %>
                  </span>
                </td>
                <td>
                  <span class="badge <%= product.active? ? 'bg-success' : 'bg-secondary' %>">
                    <%= product.active? ? 'Active' : 'Inactive' %>
                  </span>
                </td>
                <td><%= product.created_at.strftime("%m/%d/%Y") %></td>
                <td>
                  <div class="btn-group" role="group">
                    <%= link_to admin_product_path(product), class: "btn btn-sm btn-outline-info", title: "View" do %>
                      <i class="fas fa-eye"></i>
                    <% end %>
                    <%= link_to edit_admin_product_path(product), class: "btn btn-sm btn-outline-primary", title: "Edit" do %>
                      <i class="fas fa-edit"></i>
                    <% end %>
                    <%= link_to admin_product_path(product), data: { turbo_method: :delete, confirm: "Are you sure you want to delete this product?" }, 
                        class: "btn btn-sm btn-outline-danger", 
                        title: "Delete" do %>
                      <i class="fas fa-trash"></i>
                    <% end %>
                  </div>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    <% else %>
      <div class="text-center py-5">
        <i class="fas fa-box fa-3x text-muted mb-3"></i>
        <h4>No Products Found</h4>
        <p class="text-muted">Get started by adding your first product.</p>
        <%= link_to "Add New Product", new_admin_product_path, class: "btn btn-success" %>
      </div>
    <% end %>
  </div>
</div>
