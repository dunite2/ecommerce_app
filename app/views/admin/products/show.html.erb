<div class="d-flex justify-content-between align-items-center mb-4">
  <h1>Product Details</h1>
  <div>
    <%= link_to edit_admin_product_path(@product), class: "btn btn-primary me-2" do %>
      <i class="fas fa-edit me-2"></i>Edit
    <% end %>
    <%= link_to admin_products_path, class: "btn btn-outline-secondary" do %>
      <i class="fas fa-arrow-left me-2"></i>Back to Products
    <% end %>
  </div>
</div>

<div class="row">
  <div class="col-md-4">
    <div class="card">
      <div class="card-body text-center">
        <% if @product.image.present? %>
          <%= image_tag @product.image, alt: @product.name, class: "img-fluid rounded mb-3", style: "max-height: 300px;" %>
        <% else %>
          <div class="placeholder-image bg-light rounded mb-3 d-flex align-items-center justify-content-center" style="height: 300px;">
            <i class="fas fa-image fa-3x text-muted"></i>
          </div>
        <% end %>
        
        <h5><%= @product.name %></h5>
        <p class="text-muted">Product ID: <%= @product.id %></p>
      </div>
    </div>
  </div>
  
  <div class="col-md-8">
    <div class="card">
      <div class="card-body">
        <div class="row mb-3">
          <div class="col-sm-4"><strong>Name:</strong></div>
          <div class="col-sm-8"><%= @product.name %></div>
        </div>
        
        <div class="row mb-3">
          <div class="col-sm-4"><strong>Price:</strong></div>
          <div class="col-sm-8">$<%= number_with_precision(@product.price, precision: 2) %></div>
        </div>
        
        <div class="row mb-3">
          <div class="col-sm-4"><strong>Stock Quantity:</strong></div>
          <div class="col-sm-8">
            <span class="badge <%= @product.stock_quantity > 10 ? 'bg-success' : @product.stock_quantity > 0 ? 'bg-warning' : 'bg-danger' %>">
              <%= @product.stock_quantity %> units
            </span>
          </div>
        </div>
        
        <div class="row mb-3">
          <div class="col-sm-4"><strong>Status:</strong></div>
          <div class="col-sm-8">
            <span class="badge <%= @product.active? ? 'bg-success' : 'bg-secondary' %>">
              <%= @product.active? ? 'Active' : 'Inactive' %>
            </span>
          </div>
        </div>
        
        <div class="row mb-3">
          <div class="col-sm-4"><strong>Created:</strong></div>
          <div class="col-sm-8"><%= @product.created_at.strftime("%B %d, %Y at %I:%M %p") %></div>
        </div>
        
        <div class="row mb-3">
          <div class="col-sm-4"><strong>Last Updated:</strong></div>
          <div class="col-sm-8"><%= @product.updated_at.strftime("%B %d, %Y at %I:%M %p") %></div>
        </div>
        
        <div class="row mb-3">
          <div class="col-sm-4"><strong>Description:</strong></div>
          <div class="col-sm-8">
            <p class="mb-0"><%= simple_format(@product.descrption) %></p>
          </div>
        </div>
        
        <% if @product.image.present? %>
          <div class="row mb-3">
            <div class="col-sm-4"><strong>Image URL:</strong></div>
            <div class="col-sm-8">
              <small class="text-muted"><%= @product.image %></small>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<div class="row mt-4">
  <div class="col-12">
    <div class="card">
      <div class="card-header">
        <h5>Actions</h5>
      </div>
      <div class="card-body">
        <div class="d-flex gap-2">
          <%= link_to edit_admin_product_path(@product), class: "btn btn-primary" do %>
            <i class="fas fa-edit me-2"></i>Edit Product
          <% end %>
          
          <%= link_to product_path(@product), class: "btn btn-outline-info", target: "_blank" do %>
            <i class="fas fa-external-link-alt me-2"></i>View on Site
          <% end %>
          
          <%= link_to admin_product_path(@product), method: :delete, 
              class: "btn btn-outline-danger", 
              data: { confirm: "Are you sure you want to delete this product? This action cannot be undone." } do %>
            <i class="fas fa-trash me-2"></i>Delete Product
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
