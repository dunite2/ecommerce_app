<div class="card">
  <div class="card-body">
    <%= form_with model: [:admin, @product], local: true, class: "row g-3" do |form| %>
      
      <% if @product.errors.any? %>
        <div class="col-12">
          <div class="alert alert-danger">
            <h6>Please fix the following errors:</h6>
            <ul class="mb-0">
              <% @product.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        </div>
      <% end %>

      <div class="col-md-6">
        <%= form.label :name, class: "form-label" %>
        <%= form.text_field :name, class: "form-control", placeholder: "Enter product name" %>
      </div>

      <div class="col-md-6">
        <%= form.label :price, class: "form-label" %>
        <div class="input-group">
          <span class="input-group-text">$</span>
          <%= form.number_field :price, step: 0.01, class: "form-control", placeholder: "0.00" %>
        </div>
      </div>

      <div class="col-md-6">
        <%= form.label :stock_quantity, "Stock Quantity", class: "form-label" %>
        <%= form.number_field :stock_quantity, class: "form-control", placeholder: "0" %>
      </div>

      <div class="col-md-6">
        <%= form.label :image, "Image URL", class: "form-label" %>
        <%= form.text_field :image, class: "form-control", placeholder: "https://example.com/image.jpg" %>
      </div>

      <div class="col-12">
        <%= form.label :descrption, "Description", class: "form-label" %>
        <%= form.text_area :descrption, rows: 4, class: "form-control", placeholder: "Enter product description" %>
      </div>

      <div class="col-md-6">
        <div class="form-check">
          <%= form.check_box :active, class: "form-check-input" %>
          <%= form.label :active, "Active Product", class: "form-check-label" %>
        </div>
      </div>

      <div class="col-12">
        <hr>
        <div class="d-flex gap-2">
          <%= form.submit (@product.new_record? ? "Create Product" : "Update Product"), 
              class: "btn btn-success" %>
          <%= link_to "Cancel", admin_products_path, class: "btn btn-secondary" %>
          <% unless @product.new_record? %>
            <%= link_to "View Product", admin_product_path(@product), class: "btn btn-outline-info" %>
          <% end %>
        </div>
      </div>

    <% end %>
  </div>
</div>
