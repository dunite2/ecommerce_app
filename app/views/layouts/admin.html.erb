<!DOCTYPE html>
<html>
  <head>
    <title>Admin - <%= content_for(:title) || "Matcha Fusion" %></title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= yield :head %>

    <link rel="manifest" href="/manifest.json">
    <link rel="icon" href="/icon.png" type="image/png">
    <link rel="icon" href="/icon.svg" type="image/svg+xml">
    <link rel="apple-touch-icon" href="/icon.png">
    
    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Coustard:wght@400;900&display=swap" rel="stylesheet">
    
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet">
    
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    
    <style>
      .admin-sidebar {
        background-color: #2d5016;
        min-height: 100vh;
      }
      
      .admin-sidebar .nav-link {
        color: #b1dd93;
        padding: 1rem;
        border-bottom: 1px solid #1a3009;
      }
      
      .admin-sidebar .nav-link:hover {
        background-color: #1a3009;
        color: white;
      }
      
      .admin-sidebar .nav-link.active {
        background-color: #1a3009;
        color: white;
      }
      
      .admin-header {
        background-color: #2d5016;
        color: white;
        padding: 1rem;
      }
      
      .admin-content {
        background-color: #f8f9fa;
        min-height: 100vh;
        padding: 2rem;
      }
    </style>
  </head>

  <body>
    <div class="container-fluid">
      <div class="row">
        <!-- Sidebar -->
        <div class="col-md-3 col-lg-2 admin-sidebar">
          <div class="admin-header">
            <h4>Admin Panel</h4>
            <small>Welcome, <%= current_user.email %></small>
          </div>
          
          <nav class="nav flex-column">
            <%= link_to admin_root_path, class: "nav-link #{'active' if request.path == admin_root_path}" do %>
              <i class="fas fa-tachometer-alt me-2"></i>Dashboard
            <% end %>
            
            <%= link_to admin_products_path, class: "nav-link #{'active' if request.path.include?('products')}" do %>
              <i class="fas fa-box me-2"></i>Products
            <% end %>
            
            <%= link_to admin_pages_path, class: "nav-link #{'active' if request.path.include?('pages')}" do %>
              <i class="fas fa-file-alt me-2"></i>Pages
            <% end %>
            
            <%= link_to admin_orders_path, class: "nav-link #{'active' if request.path.include?('orders')}" do %>
              <i class="fas fa-shopping-cart me-2"></i>Orders
            <% end %>
            
            <%= link_to admin_users_path, class: "nav-link #{'active' if request.path.include?('users')}" do %>
              <i class="fas fa-users me-2"></i>Users
            <% end %>
            
            <hr class="my-3" style="border-color: #1a3009;">
            
            <%= link_to root_path, class: "nav-link" do %>
              <i class="fas fa-home me-2"></i>Back to Site
            <% end %>
            
            <%= link_to destroy_user_session_path, method: :delete, class: "nav-link" do %>
              <i class="fas fa-sign-out-alt me-2"></i>Logout
            <% end %>
          </nav>
        </div>
        
        <!-- Main Content -->
        <div class="col-md-9 col-lg-10 admin-content">
          <% flash.each do |type, message| %>
            <div class="alert alert-<%= type == 'notice' ? 'success' : 'danger' %> alert-dismissible fade show">
              <%= message %>
              <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
          <% end %>
          
          <%= yield %>
        </div>
      </div>
    </div>
    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
