<!-- Orders Index Page -->
<div class="container mt-4">
  <div class="row">
    <div class="col-12">
      <h1 class="page-title">My Orders</h1>
      <p class="page-subtitle">Track your order history and status</p>
    </div>
  </div>

  <div class="row">
    <div class="col-12">
      <% if @orders.any? %>
        <div class="table-responsive">
          <table class="table table-striped">
            <thead>
              <tr>
                <th>Order #</th>
                <th>Date</th>
                <th>Status</th>
                <th>Items</th>
                <th>Total</th>
                <th>Actions</th>
              </tr>
            </thead>
            <tbody>
              <% @orders.each do |order| %>
                <tr>
                  <td><strong>#<%= order.id %></strong></td>
                  <td><%= order.created_at.strftime("%B %d, %Y") %></td>
                  <td>
                    <span class="badge bg-<%= order.status == 'pending' ? 'warning' : 
                                               order.status == 'processing' ? 'info' :
                                               order.status == 'shipped' ? 'primary' :
                                               order.status == 'delivered' ? 'success' : 'secondary' %>">
                      <%= order.status.titleize %>
                    </span>
                  </td>
                  <td><%= order.total_items %> item(s)</td>
                  <td><strong>$<%= sprintf("%.2f", order.total) %></strong></td>
                  <td>
                    <%= link_to "View Details", order_path(order), class: "btn btn-outline-success btn-sm" %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      <% else %>
        <div class="text-center py-5">
          <i class="fas fa-receipt fa-3x text-muted mb-3"></i>
          <h3>No Orders Yet</h3>
          <p class="text-muted">You haven't placed any orders yet.</p>
          <%= link_to "Start Shopping", products_path, class: "btn btn-success" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
